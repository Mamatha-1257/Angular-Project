\begin{frame}{Co@pro in a Nutshell!}
\begin{block}{}
\begin{center}
A platform that helps the professionals to get a wider exposure to events happening around in the IT world!
\end{center}
\end{block}
\hspace{2cm}
\pause
\begin{block}{Tech Stack}
\begin{center}
\begin{itemize}
    \item Database\hspace{1cm}MySQL \\
    \item ORM\hspace{1.6cm}Hibernate
    \item Backend\hspace{1.2cm}RESTAPI
    \item Framework\hspace{0.8cm}Angular 
    \item Frontend \hspace{0.8cm} HTML, CSS, Bootstrap, JavaScript
\end{itemize}

\end{center}
\end{block}
\end{frame}}

